<p id="notice"><%= notice %></p>
<div class="toppage">
  <h1 class="top">カレンダー</h1><br>
  <div class="row">
    <div class="col-md-4">
	    <div class="schedule">今後の予定一覧</div>
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th>タイトル</th>
              <th>日程</th>
            </tr>
          </thead>
          <tbody>
            <% @schedules.each do |schedule| %>
            <tr>
            <td><%= link_to schedule.title, user_schedule_url(current_user,schedule.id) %></td>
            <td><%= schedule.start_time.strftime("%m-%d") %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= form_with(model: @schedule, url: user_schedules_path, local: true ) do |f| %>
        <%= f.hidden_field :user_id, :value => @user.id %>
        <div class="title">
          <div class="form-tag">タイトル</div>
          <%= f.text_field :title %>
        </div>
        <div class="content">
          <div class="form-tag">内容</div>
          <%= f.text_field :content %>
        </div>
        <div class="time">
          <div class="form-tag">時間</div>
          <%= f.datetime_select :start_time %>
        </div>
        <div class="submit">
          <%= f.submit %>
        </div>
        <% end %>
    </div>
    <div class="col-md-12">
      <%= month_calendar events: @schedules do |date, schedules| %>
        <%= date.day %>
        
        <% schedules.each do |schedule| %>
      <div>
        <%= link_to schedule.title, user_schedule_url(current_user,schedule.id) %>
      </div>
        <% end %>
      <% end %>
  　</div>
  </div>
</div>
